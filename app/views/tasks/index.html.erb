<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Description</th>
    <th>Started at</th>
    <th>Completed at</th>
    <th>Due at</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.subject %></td>
    <td><%= task.description %></td>
    <td><%= task.started_at %></td>
    <td><%= task.completed_at %></td>
    <td><%= task.due_at %></td>
    <td><%= task.state %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

